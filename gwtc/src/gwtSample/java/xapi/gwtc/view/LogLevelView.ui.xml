<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="res"
    type="xapi.gwtc.view.GwtcResources" />
  <g:HTMLPanel>
  <div ui:field="body" class="{res.css.block}">
      Log Level:<br/>
         <input 
            type="radio"
            value="ERROR"
            name="loglevel" 
            ui:field="radioLogError" 
            class="{res.css.radio}"
         /><label ui:field="labelLogError" class="{res.css.radioLabel}" for="radioLogError">Error</label>
         <br/>
         <input 
            type="radio"
            value="WARN"
            name="loglevel" 
            ui:field="radioLogWarn" 
            class="{res.css.radio}"
         /><label ui:field="labelLogWarn" class="{res.css.radioLabel}" for="radioLogWarn">Warn</label>
         <br/>
         <input 
            type="radio"
            value="INFO"
            name="loglevel" 
            ui:field="radioLogInfo" 
            class="{res.css.radio}"
         /><label ui:field="labelLogInfo" class="{res.css.radioLabel}" for="radioLogInfo">Info</label>
         <br/>
         <input 
            type="radio"
            value="TRACE"
            name="loglevel" 
            ui:field="radioLogTrace" 
            class="{res.css.radio}"
         /><label ui:field="labelLogTrace" class="{res.css.radioLabel}" for="radioLogTrace">Trace</label>
         <br/>
         <input 
            type="radio"
            value="DEBUG"
            name="loglevel" 
            ui:field="radioLogDebug" 
            class="{res.css.radio}"
         /><label ui:field="labelLogDebug" class="{res.css.radioLabel}" for="radioLogDebug">Debug</label>
         <br/>
         <input 
            type="radio"
            value="SPAM"
            name="loglevel" 
            ui:field="radioLogSpam" 
            class="{res.css.radio}"
         /><label ui:field="labelLogSpam" class="{res.css.radioLabel}" for="radioLogSpam">Spam</label>
         <br/>
         <input 
            type="radio"
            value="ALL"
            name="loglevel" 
            ui:field="radioLogAll" 
            class="{res.css.radio}"
         /><label ui:field="labelLogAll" class="{res.css.radioLabel}" for="radioLogAll">All</label>
      
      </div>
      
    </g:HTMLPanel>
</ui:UiBinder>