<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.wetheinter</groupId>
		<artifactId>xapi-samples</artifactId>
		<version>0.6-SNAPSHOT</version>
	</parent>
	<artifactId>xapi-demo</artifactId>
	<packaging>jar</packaging>
	<version>0.6-SNAPSHOT</version>
	<name>XApi - Demo Application</name>
	<url>WeTheInter.net</url>
	<description>
        GwtCon 2017 demo app introducing xapi-lang (and xapi itself)
        </description>

	<dependencies>
		<dependency>
			<groupId>net.wetheinter</groupId>
			<artifactId>xapi-server-vertx</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>com.google.elemental2</groupId>
			<artifactId>elemental2-dom</artifactId>
			<version>1.0.0-beta-1</version>
		</dependency>

		<dependency>
			<groupId>net.wetheinter</groupId>
			<artifactId>xapi-jre-ui-javafx</artifactId>
		</dependency>

	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>xapi.demo.jre.XapiLangAdmin</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
